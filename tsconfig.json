{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "NodeNext",
        "isolatedModules": true,
        "outDir": "dist",
        "rootDir": ".",
        "types": ["@playwright/test"]
    },
    "include": ["tests/**/*.ts", "pages/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}